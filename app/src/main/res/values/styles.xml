<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="buttonTheme" parent="AppTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="editTextStyleBorderRed" parent="EditTextStyle">
        <item name="android:background">@drawable/red_border</item>
        <item name="android:padding">@dimen/margin</item>
    </style>


    <style name="editTextStyleBorderBlue" parent="EditTextStyle">
        <item name="android:background">@drawable/blue_border</item>
        <item name="android:padding">@dimen/margin</item>
    </style>
</resources>
